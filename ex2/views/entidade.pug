extends layout

block content
  .w3-container.w3-padding-32
    .w3-card-4.w3-round-large
      header.w3-container.w3-teal.w3-round-large
        h1(class='w3-center w3-margin-0') #{contratos[0]["NIPC_entidade_comunicante"]} - #{contratos[0]["entidade_comunicante"]}
      .w3-container.w3-padding-16
        if contratos && contratos.length > 0
          table.w3-table.w3-bordered.w3-striped
            thead
              tr
                th IdContrato
                th ObjetoContrato
                th DataCelebracaoContrato
                th PrecoContratual
            tbody
              each contrato in contratos
                tr
                    td
                        a(href=`/${contrato._id}`, style='text-decoration: none; color: #009688;') #{contrato._id}
                    td #{contrato.objectoContrato}
                    td #{contrato.dataCelebracaoContrato}
                    td #{contrato.precoContratual}
          p(class='w3-center' style='font-size: 24px; color: #009688;') Somatório do Valor dos Contratos: #{totalSum}€
        else
          p Não há registos para nesta Entidade.
        footer.w3-container.w3-teal.w3-padding.w3-round-large
            address.w3 Desenvolvido por João Coelho em #{date} - 
                a(href='/') Voltar
