extends layout

block content
  .w3-card-4
    header.w3-container.w3-teal
      h1(class='w3-center') Lista de Contratos
    .w3-container
      table.w3-table.w3-bordered.w3-striped
        thead
          tr
            th IdContrato
            th ObjetoContrato
            th DataCelebracaoContrato
            th PrecoContratual
            th NIPC_EntidadeComunicante
            th EntidadeComunicante
        tbody
          each contrato in contratos
            tr
              td
                a(href=`/${contrato._id}`, style='text-decoration: none; color: #009688;') #{contrato._id}
              td #{contrato.objectoContrato}
              td #{contrato.dataCelebracaoContrato}
              td #{contrato.precoContratual}
              td
                a(href=`/entidades/${contrato.NIPC_entidade_comunicante}`, style='text-decoration: none; color: #009688;') #{contrato.NIPC_entidade_comunicante}
              td #{contrato.entidade_comunicante}